{
  "functions": {
    "bot/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/webhook",
      "destination": "/bot/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "BOT_TOKEN": "@bot_token",
    "ADMIN_IDS": "@admin_ids",
    "MINI_APP_URL": "@mini_app_url",
    "FIREBASE_SERVICE_ACCOUNT": "@firebase_service_account",
    "FIREBASE_DATABASE_URL": "@firebase_database_url"
  }
}