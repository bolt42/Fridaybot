{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "bot/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/webhook",
      "destination": "/bot/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
